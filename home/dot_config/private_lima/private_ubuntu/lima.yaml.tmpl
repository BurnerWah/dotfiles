mounts:
  - location: '~'
  - location: /tmp/lima
    writable: true

mountTypesUnsupported: [9p]

memory: 4GiB

containerd:
  system: false
  user: false

# vzNAT isn't working in ubuntu

upgradePackages: true
provision:
  - mode: system
    script: |
      #!/bin/bash
      set -eux -o pipefail
      command -v ansible >/dev/null 2>&1 && exit 0
      apt install -y ansible

  - mode: ansible
    playbook: '# {{ joinPath .chezmoi.targetFile ".." "playbook.yaml" }}'

probes:
  - description: ansible
    script: |
      #!/bin/bash
      set -eux -o pipefail
      if ! timeout 30s bash -c "until command -v ansible >/dev/null 2>&1; do sleep 3; done"; then
        echo >&2 "ansible is not installed yet"
        exit 1
      fi
