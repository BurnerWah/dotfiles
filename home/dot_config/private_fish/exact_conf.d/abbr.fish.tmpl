if command -qs rg
    abbr -a grep rg
    abbr -a egrep rg
    abbr -a fgrep 'rg -F'

    abbr -a bzgrep 'rg -z'
    abbr -a bzegrep 'rg -z'
    abbr -a bzfgrep 'rg -zF'

    abbr -a lzgrep 'rg -z'
    abbr -a lzegrep 'rg -z'
    abbr -a lzfgrep 'rg -zF'

    abbr -a xzgrep 'rg -z'
    abbr -a xzegrep 'rg -z'
    abbr -a xzfgrep 'rg -zF'

    abbr -a zgrep 'rg -z'
    abbr -a zegrep 'rg -z'
    abbr -a zfgrep 'rg -zF'

    abbr -a zstdgrep 'rg -z'

    abbr -a psrg 'ps aux | rg'
end

if command -qs nvim
    abbr -a vi nvim
    abbr -a vim nvim
end

if command -qs yt-dlp
    abbr -a ydl yt-dlp
    abbr -a ydlmp3 'yt-dlp -x --audio-format mp3'
end

