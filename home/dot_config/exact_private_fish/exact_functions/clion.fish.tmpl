# Temporary workaround for https://github.com/fish-shell/fish-shell/issues/11354
function clion
    if command -q clion
        command clion $argv
    else
        "# {{ lookPath "clion" }}" $argv
    end
end
# {{ else if eq .chezmoi.os "darwin" -}}
function clion --wraps=/Applications/CLion.app/Contents/MacOS/clion --description 'alias clion=/Applications/CLion.app/Contents/MacOS/clion'
    /Applications/CLion.app/Contents/MacOS/clion $argv
end
