diff:
  command: delta

edit:
  command: code
  args: [--wait]

gitHub:
  refreshPeriod: 30m # Don't check GitHub too often

interpreters:
  ps1:
    command: pwsh
    args: [-NoLogo, -NonInteractive, -NoProfile]
  elv:
    command: elvish
    args: [-norc]
  js:
    command: node

