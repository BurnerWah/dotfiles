# chezmoi:template:left-delimiter="# {{" right-delimiter=}}
diff:
  command: delta

edit:
  command: code
  args: [--wait]

gitHub:
  refreshPeriod: 30m # Don't check GitHub too often

interpreters:
  ps1:
    command: pwsh
    args: [-NoLogo, -NonInteractive, -NoProfile]
  elv:
    command: elvish
    args: [-norc]
  js:
    command: node

# {{- if eq .chezmoi.os "windows" }}
cd:
  command: pwsh
# {{- end }}

textconv:
  - pattern: '**/*.plist'
    command: plutil
    args: [-convert, xml1, -o, '-', '-']

